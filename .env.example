# Arquivo de exemplo das variáveis de ambiente
# Copie este arquivo para .env e configure os valores

# ======================
# CONFIGURAÇÕES BÁSICAS
# ======================

# URL do frontend (OBRIGATÓRIO)
FRONTEND_URL=https://seu-dominio.com

# Nome da instalação
INSTALLATION_NAME=MeuChatwoot

# Chave secreta (OBRIGATÓRIO - gere uma nova!)
SECRET_KEY_BASE=sua-chave-secreta-muito-longa-e-segura-de-pelo-menos-32-caracteres

# Senha do PostgreSQL
POSTGRES_PASSWORD=sua-senha-postgres-segura

# ======================
# CONFIGURAÇÕES DE EMAIL
# ======================

# SMTP (opcional, mas recomendado)
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_DOMAIN=gmail.com
SMTP_USERNAME=seu-email@gmail.com
SMTP_PASSWORD=sua-senha-de-app
SMTP_AUTHENTICATION=login
SMTP_ENABLE_STARTTLS_AUTO=true
SMTP_OPENSSL_VERIFY_MODE=peer

# Remetente
MAILER_SENDER_EMAIL=Chatwoot <seu-email@gmail.com>
MAILER_INBOUND_EMAIL_DOMAIN=seu-email@gmail.com

# ======================
# AWS S3 (STORAGE)
# ======================

# Configuração do S3 (opcional)
ACTIVE_STORAGE_SERVICE=amazon
AWS_ACCESS_KEY_ID=sua-access-key
AWS_SECRET_ACCESS_KEY=sua-secret-key
AWS_REGION=sa-east-1
S3_BUCKET_NAME=seu-bucket
DIRECT_UPLOADS_ENABLED=true

# ======================
# CONFIGURAÇÕES AVANÇADAS
# ======================

# SSL/TLS
FORCE_SSL=true

# Localização
DEFAULT_LOCALE=pt_BR

# Features
ENABLE_ACCOUNT_SIGNUP=true
CHATWOOT_ENABLE_ACCOUNT_LEVEL_FEATURES=true
USE_INBOX_AVATAR_FOR_BOT=true
DISABLE_AGENT_CONVERSATION_VIEW_OTHER=false
HIDE_ALL_CHATS_FROM_AGENT=true

# Performance
RAILS_MAX_THREADS=7
WEB_CONCURRENCY=4
SIDEKIQ_CONCURRENCY=20
RACK_TIMEOUT_SERVICE_TIMEOUT=0
ENABLE_RACK_ATTACK=false

# Hub
CHATWOOT_HUB_URL=https://inovanode.com.br